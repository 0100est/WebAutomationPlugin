{
  "manifest_version": 3,
  "name": "Taskmate Research Plugin",
  "description": "Taskmate Research Plugin",
  "version": "0.0.1",
  "icons": {
    "256": "icon_256.png"
  },
  "author": "Darius Bufnea",
  "homepage_url": "https://www.scs.ubbcluj.ro/plugin",

  "action": {
    "default_icon": "icon_256.png",
    "default_popup": "popup.html",
    "default_title": "Taskmate Research Plugin"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery.min.js",
        "datamodel-spec.js",
        "page.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module" //optional   
  },

  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    //"webRequestBlocking",
    "alarms"
  ],
  "host_permissions": [
    "ws://*/*", 
    "wss://*/*",
    "http://*/",
    "https://*/"
  ]
}

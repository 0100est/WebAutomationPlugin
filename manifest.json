{
  "manifest_version": 2,
  "name": "Scientific Research Plug-in",
  "description": "Scientific Research Plug-in",
  "version": "0.0.1",
  "icons": {
    "256": "icon_256.png"
  },
  "author": "Darius Bufnea",
  "homepage_url": "https://www.scs.ubbcluj.ro/plugin",

  "browser_action": {
    "default_icon": "icon_256.png",
    "default_popup": "popup.html",
    "default_title": "Scientific Research Plug-in"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery.min.js",
        "page.js"
      ]
    }
  ],

  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "ws://*/*", 
    "wss://*/*",
    "http://*/",
    "https://*/"
  ]
}
